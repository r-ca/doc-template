{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
